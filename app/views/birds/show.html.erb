<div class="bg-purple full-height pt-50 pb-50">
<div class="flex flex-col items-center justify-center">
  <div class="">
    <%= image_tag url_for(@bird.image), class:"w-96"  if @bird.image.attached? %>
  </div>
  <div class="bird-title f-25 aboreto text-white">
    <%= @bird.name%>
  </div>
  <%= form_with url: mark_seen_birds_path, method: :post do %>
    <div>
      <%= check_box_tag "bird_ids[]", @bird.id, current_user.seen_birds.include?(@bird) %>
      <%= link_to "Remove from Seen Birds", remove_seen_bird_bird_path(@bird), method: :delete, class: "btn btn-danger" %>
      <%= label_tag "bird_ids_#{@bird.id}", @bird.name %>
      <% if current_user.seen_birds.include?(@bird) %>
        
      <% end %>
    </div>
  <%= submit_tag "Mark as Seen" %>
<% end %>
  <div class="stats bg-sand">
    <p><b>Size: </b> <%= @bird.size%></p>
    <p><b>Status: </b> <%= @bird.status%></p>
    <p><b>Habitat: </b> <%= @bird.habitat%></p>
    <p><b>Breeding Season: </b> <%= @bird.breeding_season%></p>
  </div>
  <div class="bird-description f-15">
    <p><%= @bird.description%></p>
  </div>
</div>



<%= link_to previous_bird_path(@bird), class: "previous-button" do %>
  <%= image_tag "feather-arrow-left.png", alt: "Previous Bird", class: "svg-icon" %>
<% end %>

<%= link_to next_bird_path(@bird), class: "next-button" do %>
  <%= image_tag "feather-arrow-right.png", alt: "Next Bird", class: "svg-icon" %>
<% end %>
</div>

<nav class="sticky-navbar">
  <ul>
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to "All Birds", birds_path %></li>
    <li><%= link_to "My Profile", profile_path %></li>
  </ul>
</nav>
